{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pack-maker",
  "version": "0.1.0",
  "identifier": "com.lewdware.pack-maker",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "pack-maker",
        "width": 800,
        "height": 600,
        "maximized": true,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$TEMP/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "./bin/ffmpeg",
      "./bin/ffprobe"
    ]
  }
}
